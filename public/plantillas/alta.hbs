{{#if productos.length }}
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                {{!-- <th>Marca</th> --}}
                <th>Categoria</th>
                <th>Detalles</th>
                <th>Foto</th>
                <th>Envio</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        {{#each productos}}
            <tbody>
                <tr>
                    <td data-label="Nombre">{{nombre}}</td>
                    <td data-label="Precio">{{precio}}</td>
                    <td data-label="Stock">{{stock}}</td>
                    {{!-- <td>{{marca}}</td> --}}
                    <td data-label="Categoria">{{categoria}}</td>
                    <td data-label="Detalles">{{detalles}}</td>
                    <td>
                        <img style="display:block; margin: 0 auto;" src="{{foto}}" width="100" height="100" alt="{{nombre}}"> 
                        {{!-- <img style="display:block; margin: 0 auto;" src="../img/productos/{{foto}}.jpg" width="50" alt="{{nombre}}" class="img_tabla"> --}}
                    </td>
                    {{#if envio}}
                        <td data-label="Envio">Si</td>
                    {{else}}
                        <td data-label="Envio">No</td>
                    {{/if}}
                    <td>
                        {{#if ../validos}}
                            <button onclick="productoController.actualizarProducto('{{id}}')">Actualizar</button>
                        {{else}}
                            <button disabled onclick="productoController.actualizarProducto('{{id}}')">Actualizar</button>
                        {{/if}}
                        <button onclick="productoController.borrarProducto('{{id}}')">Borrar</button>
                    </td>
                </tr>
            </tbody>
        {{/each}}
    </table>
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}